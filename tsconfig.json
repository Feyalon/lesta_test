{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "paths": {
        "@app/*": ["app/*"],
        "@features/*": ["features/*"],
        "@shared/*": ["shared/*"],
        "@store/*": ["store/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  